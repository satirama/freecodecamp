.container-fluid 
    background-color #FF2929
    color #ffffff
    .title
        h1  
            margin 4% auto 2% auto
            font-size 45px
        p  
            font-style italic
            font-size 20px
    .set
        h3  
            font-size 30px
            margin-top 7px
        button
            margin 0px 15px 0 15px
            border none 
            background-color rgba(0,0,0,0)
            color #ffffff
            font-size 30px
        .col-md-4
            margin 3% auto 3% auto
    .clock 
        margin 3% auto 3% auto
        button.time
            border 3px solid #ffffff
            border-radius 50%
            width 250px
            height 250px
            background-color rgba(0,0,0,0)
            color #ffffff
            font-weight 700
            font-size 25px
    .footer
        margin 60px auto auto auto
        a i  
            color #ffffff