.search 
    margin-top 90px
    .quote
        color #D0DDD9
        p  
            font-style italic
    .row .looker 
        .random a
            color #4BE3AB
            font-weight 700
        .input-group
            position relative
            input 
                border-radius 50px
                border 3px solid #D0DDD9
                text-indent 30px
                background-color rgba(0,0,0,0)
            input:focus
                border-color #4BE3AB
            .fa
                position absolute
                top 11px
                left 15px
                font-size 18px
                color #D0DDD9
        .input-group:hover
            .fa 
                color #4BE3AB
    .footer
        margin-top 50px
        margin-bottom 20px
        a 
            color #D0DDD9
        a:hover
            color #4BE3AB