.game
    height: 100vh;
    .squares
        width: 90%;
        background-color: #fff;
        height: 70vh;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        h1  
            font-family: 'Press Start 2P', cursive;
            font-size: 33px;
            color: #464646;
            margin-bottom: 2em;
        .yellow
            background-color: #FBDD02;
            width: 150px;
            height: 150px;
            border-top-left-radius: 100%;
            box-shadow: -2px -3px 5px 1px #B5B5B5;
            margin: 0 0 4px 0;
            border-bottom-right-radius: 4px;
            border: 2px solid rgba(2,2,2,0.3);
        .green
            background-color: #65E700;
            width: 150px;
            height: 150px;
            border-top-right-radius: 100%;
            box-shadow: 2px -3px 5px 1px #B5B5B5;
            margin: 0 0 4px 4px;
            border-bottom-left-radius: 4px;
            border: 2px solid rgba(2,2,2,0.3);
        .orange
            background-color: #FB3702;
            width: 150px;
            height: 150px;
            border-bottom-left-radius: 100%;
            box-shadow: -2px 3px 5px 1px #B5B5B5;
            margin: 4px 0 0 0;
            border-top-right-radius: 4px;
            border: 2px solid rgba(2,2,2,0.3);
        .blue
            background-color: #03E4D3;
            width: 150px;
            height: 150px;
            border-bottom-right-radius: 100%;
            box-shadow: 2px 3px 5px 1px #B5B5B5;
            margin: 4px 0 0 4px;
            border-top-left-radius: 4px;
            border: 2px solid rgba(2,2,2,0.3);
